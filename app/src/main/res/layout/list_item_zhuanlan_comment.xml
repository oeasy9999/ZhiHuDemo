<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_1dp"
    android:background="@color/white"
    android:padding="@dimen/margin_10dp"
    >
  <com.oeasy9999.zhihudemo.widget.CircleImageView
      android:id="@+id/img_avatar"
      android:layout_width="@dimen/width_50dp"
      android:layout_height="@dimen/height_50dp"
      android:layout_marginEnd="@dimen/margin_10dp"
      android:layout_marginRight="@dimen/margin_10dp"
      />
  <TextView
      android:id="@+id/txt_comment_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/margin_10dp"
      android:layout_toEndOf="@id/img_avatar"
      android:layout_toRightOf="@id/img_avatar"
      />
  <TextView
      android:id="@+id/txt_comment_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@id/txt_comment_name"
      android:layout_alignStart="@id/txt_comment_name"
      android:layout_below="@id/txt_comment_name"
      android:layout_marginBottom="@dimen/margin_10dp"
      />
  <TextView
      android:id="@+id/txt_comment_publishtime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@id/txt_comment_name"
      android:layout_alignStart="@id/txt_comment_name"
      android:layout_below="@id/txt_comment_content"
      />
  <TextView
      android:id="@+id/txt_comment_likenum"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_below="@id/txt_comment_content"
      android:layout_marginEnd="@dimen/margin_10dp"
      android:layout_marginRight="@dimen/margin_10dp"
      android:drawableEnd="@drawable/ic_popularity"
      android:drawableRight="@drawable/ic_popularity"
      android:gravity="center"
      />
</RelativeLayout>

