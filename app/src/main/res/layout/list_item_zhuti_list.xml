<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_5dp"
    android:layout_marginRight="@dimen/margin_5dp"
    android:layout_marginTop="@dimen/margin_10dp"
    app:cardCornerRadius="@dimen/radiue_10dp"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="@dimen/padding_12dp">
    <ImageView android:id="@+id/img_zhuti"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_menu_gallery"/>
    <TextView android:id="@+id/txt_zhuti_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_10dp"
        android:textSize="@dimen/text_size_16sp"
        android:textColor="@color/primary_text"
        android:text="电影不无聊"/>
    <TextView android:id="@+id/txt_zhuti_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_10dp"
        android:paddingBottom="@dimen/padding_10dp"
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@android:color/darker_gray"
        android:text="电影不无聊，电影有的聊"/>
  </LinearLayout>


</android.support.v7.widget.CardView>
