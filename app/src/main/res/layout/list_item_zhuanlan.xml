<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_5dp"
    android:paddingRight="@dimen/padding_5dp"
    android:layout_marginTop="@dimen/margin_10dp"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:layout_marginRight="@dimen/margin_10dp"
    app:cardCornerRadius="@dimen/radiue_5dp"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/margin_5dp">
    <ImageView android:id="@+id/avatar"
        android:layout_width="@dimen/width_72dp"
        android:layout_height="@dimen/height_72dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/margin_5dp"
        />
    <TextView android:id="@+id/txt_zhuanlan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar"
        android:layout_toEndOf="@id/avatar"
        android:layout_marginLeft="@dimen/margin_2dp"
        android:layout_marginStart="@dimen/margin_2dp"
        android:layout_alignTop="@id/avatar"
        android:textSize="@dimen/text_size_18sp"
        android:textColor="@color/primary_text"
        android:text="产品设计与用户体验"/>
    <TextView android:id="@+id/txt_fans_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_zhuanlan_name"
        android:layout_alignStart="@id/txt_zhuanlan_name"
        android:layout_marginTop="@dimen/margin_2dp"
        android:layout_marginBottom="@dimen/margin_2dp"
        android:layout_below="@id/txt_zhuanlan_name"
        android:textSize="@dimen/text_size_14sp"
        android:text="20504人关注"/>
    <TextView android:id="@+id/txt_article_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_fans_count"
        android:layout_toEndOf="@id/txt_fans_count"
        android:layout_alignTop="@id/txt_fans_count"
        android:textSize="@dimen/text_size_14sp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginStart="@dimen/margin_20dp"
        android:text="41篇文章"/>
    <TextView android:id="@+id/txt_zhuanlan_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_zhuanlan_name"
        android:layout_alignStart="@id/txt_zhuanlan_name"
        android:layout_below="@id/txt_fans_count"
        android:textSize="@dimen/text_size_12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="关于用户体验、产品、技术和创业的干货分享集中地|最美应用：zuimeia.com"/>

  </RelativeLayout>


</android.support.v7.widget.CardView>
