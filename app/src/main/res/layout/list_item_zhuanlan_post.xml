<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10dp"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:layout_marginRight="@dimen/margin_10dp"
    app:cardCornerRadius="@dimen/radiue_5dp">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/margin_5dp">
    <ImageView android:id="@+id/img_zhuanlan_post"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_200dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:scaleType="centerCrop"/>
    <TextView android:id="@+id/txt_zhuanlan_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_zhuanlan_post"
        android:textSize="@dimen/text_size_18sp"
        android:paddingBottom="@dimen/padding_5dp"
        android:textStyle="bold"
        android:maxLines="2"
        android:textColor="@color/primary_text"
        android:text="Uber全球总部18种有趣有故事的小零食，你吃过几种？"/>
    <TextView android:id="@+id/txt_zhuanlan_post_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2dp"
        android:paddingTop="@dimen/padding_5dp"
        android:layout_below="@id/txt_zhuanlan_post_title"
        android:text="韩沈明"/>
    <TextView android:id="@+id/txt_zhuanlan_post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_5dp"
        android:layout_alignTop="@id/txt_zhuanlan_post_name"
        android:layout_toRightOf="@id/txt_zhuanlan_post_name"
        android:layout_toEndOf="@id/txt_zhuanlan_post_name"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginStart="@dimen/margin_20dp"
        android:text="7个月前"/>
    <TextView android:id="@+id/txt_zhuanlan_post_commentnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_zhuanlan_post_title"
        android:paddingTop="@dimen/padding_5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:drawableRight="@drawable/ic_comment"
        android:drawableEnd="@drawable/ic_comment"
        android:gravity="center"
        android:text="123"/>
    <TextView android:id="@+id/txt_zhuanlan_post_popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_zhuanlan_post_title"
        android:paddingTop="@dimen/padding_5dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_toLeftOf="@id/txt_zhuanlan_post_commentnum"
        android:layout_toStartOf="@id/txt_zhuanlan_post_commentnum"
        android:drawableRight="@drawable/ic_popularity"
        android:drawableEnd="@drawable/ic_popularity"
        android:gravity="center"
        android:text="250"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0.5dp"
        android:layout_alignBottom="@id/txt_zhuanlan_post_title"
        android:background="@color/lightGrey"/>
  </RelativeLayout>

</android.support.v7.widget.CardView>
